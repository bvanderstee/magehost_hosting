<!--suppress XmlUnboundNsPrefix -->
<config>
    <modules>
        <JeroenVermeulen_Hosting>
            <version>0.1.0</version>
        </JeroenVermeulen_Hosting>
    </modules>
    <global>
        <blocks>
            <jeroenvermeulen_hosting>
                <class>JeroenVermeulen_Hosting_Block</class>
            </jeroenvermeulen_hosting>
        </blocks>
        <models>
            <jeroenvermeulen_hosting>
                <class>JeroenVermeulen_Hosting_Model</class>
            </jeroenvermeulen_hosting>
        </models>
        <helpers>
            <jeroenvermeulen_hosting>
                <class>JeroenVermeulen_Hosting_Helper</class>
            </jeroenvermeulen_hosting>
        </helpers>
    </global>
    <adminhtml>
        <events>
            <clean_media_cache_after>
                <observers>
                    <jeroenvermeulen_hosting>
                        <class>jeroenvermeulen_hosting/observer</class>
                        <method>cleanMediaCacheAfter</method>
                        <type>singleton</type>
                    </jeroenvermeulen_hosting>
                </observers>
            </clean_media_cache_after>
            <jv_clean_backend_cache>
                <observers>
                    <jeroenvermeulen_hosting>
                        <class>jeroenvermeulen_hosting/observer</class>
                        <method>jvCleanBackendCache</method>
                        <type>singleton</type>
                    </jeroenvermeulen_hosting>
                </observers>
            </jv_clean_backend_cache>
        </events>
    </adminhtml>
    <default>
        <jeroenvermeulen_hosting>
            <cluster>
                <enable_pass_cache_clean>0</enable_pass_cache_clean>
                <http_nodes>node.domain.tld:443</http_nodes>
                <api_user>cluster</api_user>
                <api_key>change_me</api_key>
            </cluster>
        </jeroenvermeulen_hosting>
    </default>
</config>